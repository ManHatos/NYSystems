{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"outDir": "compiled/",
    "sourceMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"removeComments": true,
		"noEmitOnError": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"noUnusedParameters": true
	}
}
