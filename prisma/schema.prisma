// Prisma schema file

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Records {
  id        String        @id @map("_id")
  author    RecordAuthor
  user      RecordUser
  input     RecordInput
  date      DateTime      @default(now())
}

type RecordAuthor {
  id String
}

type RecordUser {
  id String
}

type RecordInput {
  reason String
  action Int
}
