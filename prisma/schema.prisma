// Prisma schema file

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// common object types

type DiscordUser {
  id String
}

type RobloxUser {
  id BigInt
}

// moderation records data

model Records {
  id        String         @id @map("_id")
  author    DiscordUser
  editors   RecordEditor[]
  input     RecordInput
  createdAt DateTime       @default(now())
}

type RecordEditor {
  user     DiscordUser
  editedAt DateTime @default(now())
}

type RecordInput {
  user   RobloxUser
  reason String
  action Int
}

// user notes
// merging to "Users" model with system NEXUS after development

model Notes {
  user      RobloxUser @id @map("_id")
  note      String
  createdAt DateTime   @default(now())
  editedAt  DateTime?
}
