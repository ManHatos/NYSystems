// Prisma schema file

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// moderation records data

model Records {
  id        String         @id @map("_id")
  author    RecordAuthor
  editors   RecordEditor[]
  user      RecordUser
  input     RecordInput
  createdAt DateTime       @default(now())
}

type RecordAuthor {
  id String
}

type RecordEditor {
  id       String
  editedAt DateTime @default(now())
}

type RecordUser {
  id Int
}

type RecordInput {
  reason String
  action Int
}
